<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search.main.View.SearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/candal"
        android:text="@string/SearchBy"
        android:textSize="48sp"
        tools:text="@string/SearchBy" />

    <TextView
        android:id="@+id/btnCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="230dp"
        android:fontFamily="@font/candal"
        android:gravity="center"
        android:text="@string/arae"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btnCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/candal"
        android:gravity="center"
        android:text="@string/category"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btnIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/candal"
        android:text="@string/Ingredient"
        android:textAlignment="center"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="140dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="130dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <Button
        android:id="@+id/searchCountry"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_gravity="center|end"
        android:layout_marginRight="190dp"
        android:layout_marginBottom="230dp"
        android:backgroundTint="#8F555353"
        app:icon="@drawable/ic_search" />

    <Button
        android:id="@+id/searchCategory"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_gravity="center|end"
        android:layout_marginTop="180dp"
        android:layout_marginRight="170dp"
        android:layout_marginBottom="230dp"
        android:backgroundTint="#8F555353"
        app:icon="@drawable/ic_search" />

    <Button
        android:id="@+id/searchIngredient"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_gravity="center|end"
        android:layout_marginTop="370dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="230dp"
        android:backgroundTint="#8F555353"
        app:icon="@drawable/ic_search" />

</FrameLayout>